{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
<div class="container">
    <h1>Articles</h1>

    <a href="{{ path('article_new') }}" class="btn btn-primary">Ajouter article</a>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prix</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.nom }}</td>
                <td>{{ article.prix }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}"  class="btn btn-secondary">DÃ©tails</a>
                    {% if is_granted('ROLE_EDITOR') %}
                        <a href="{{ path('article_edit', {'id': article.id}) }}"  class="btn btn-warning">Modifier</a>
                        {{ include('article/_delete_form.html.twig') }}    
                    {% endif %}
            
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
</div>
{% endblock %}
